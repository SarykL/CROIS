.features
	display block

	&__sub-heading
		margin-bottom 20px
		font-family 'Montserrat'
		font-size 18px
		font-weight 400
		color $theme-grey
		opacity .25

	&__heading
		font-family 'Montserrat'
		font-size 48px
		font-weight 400
		color black

	&__list
		margin-top 100px
		display block

	&__item
		display inline-block
		col(1/4)

	&__title
		margin-bottom 40px
		font-family 'Montserrat'
		font-size 18px
		font-weight 400
		color black

	&__description
		padding-x(15px)
		font-family 'Montserrat'
		font-size 14px
		font-weight 400
		line-height 24px
		color $theme-grey
		opacity .35

.features__icon
	margin-bottom 40px
	display block
	center()

	&_church
		sprite $church

	&_snowflake
		sprite $snowflake

	&_cr-balls
		sprite $cr_balls

	&_cr-bell
		sprite $cr_bell
